@page
@using RazorPages.Modelos;
@model RazorPage1.Pages.Alumnos.IndexModel
@{

}
<h1>Alumnos</h1>
<h3>Nº de alumnos @Model.Alumnos.Count()</h3>
<div class="card-deck">
	@foreach(Alumno alumno in Model.Alumnos)
	{
		var photo = "~/images/" + (alumno.Foto ?? "noimage.jpg");
		<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
			<div class="card-header">
				<h3 class="text-center">@alumno.Nombre</h3>
			</div>
			<div class="row justify-content-center">
				<img class="card-img-top imageThumbnail justify-content-center" asp-append-version="true" src="@photo">
				<div class="card-footer text-center">
					<a asp-page="/Alumnos/View" asp-route-ID="@alumno.Id" class="btn btn-primary m-1">View</a>
					<a asp-page="/Alumnos/Edit" asp-route-ID="@alumno.Id" class="btn btn-primary m-1">Edit</a>
					<a href="#" class="btn btn-danger m-1">Delete</a>
				</div>
			</div>
		</div>
	}
</div>
