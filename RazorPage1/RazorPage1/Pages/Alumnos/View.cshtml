@page
@model RazorPage1.Pages.Alumnos.ViewModel
@{
	var photo = "~/images/" + (Model.alumno.Foto ?? "noimage.jpg");
}
<div class="row justify-content-center">
	<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
		<div class="card-header">
			<h3 class="text-center">@Model.alumno.Nombre</h3>
		</div>
		<div class="card-body text-center">
			<img class="card-img-top imageThumbnail" asp-append-version="true" src="@photo">
			<h3>ID: @Model.alumno.Id</h3>
			<p>E-mail: @Model.alumno.Email</p>
			<p>Curso: @Model.alumno.CursoId</p>
		</div>
		<div class="card-footer text-center">
			<a asp-page="Index" class="btn btn-primary m-1">Back</a>
			<a href="#" class="btn btn-primary m-1">Edit</a>
			<a href="#" class="btn btn-danger m-1">Delete</a>
		</div>
	</div>
</div>