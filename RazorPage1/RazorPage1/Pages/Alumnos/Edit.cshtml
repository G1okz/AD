@page
@model RazorPage1.Pages.Alumnos.EditModel
@{
	var photo = "~/images/" + (Model.alumno.Foto ?? "noimage.jpg");
}
<h1>Edición datos alumno</h1>
<form method="post" class="mt-3">
	<input type="hidden" asp-for="alumno.Id"/>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label" asp-for="alumno.Nombre">Nombre</label>
		<div class="col-sm-10">
			<input asp-for="alumno.Nombre" class="form-control" placeholder="Nombre"/>
			<span asp-asp-validation-for="alumno.Nombre" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label" asp-for="alumno.Email">Email</label>
		<div class="col-sm-10">
			<input asp-for="alumno.Email" class="form-control" placeholder="Email"/>
			<span asp-asp-validation-for="alumno.Email" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label" asp-for="alumno.CursoId">Clase</label>
		<div class="col-sm-10">
			<select asp-for="alumno.CursoId" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Curso>()">
			</select>
			<span asp-asp-validation-for="alumno.CursoId" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label" asp-for="Photo">Foto</label>
		<div class="col-sm-10">
			<input asp-for="Photo" class="custom-file-input form-control"/>
			<label class="custom-file-label">Click aqui para cambiar foto.</label>
		</div>
	</div>
	<div class="form-group row col-sm-4 offset-4">
		<img class="imageThumbnail" src="@photo" asp-append-version="true"/>
	</div>
	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-asp-page="/Alumnos/Index" class="btn btn-primary">Back</a>
		</div>
	</div>
</form>

@section Scripts{
	<script>
		$(document.ready(function(){
			$('.custom-file-input').on("change", function () {
				var fileName = $(this).val().split("\\").pop();

			})
		})
	</script>
}